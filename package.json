  "description": "Stack 'em up. Burn 'em down. Simple, multi-project task management and prioritization.",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run build:core && npm run build:cli",
    "build:core": "tsc -p tsconfig.core.json",
