    "type": "git",
    "url": "git+https://github.com/Xerilium/stack.git"
  },
  "bugs": {
    "url": "https://github.com/Xerilium/stack/issues"
  },
  "homepage": "https://github.com/Xerilium/stack#readme",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@xerilium/catalyst": "^0.1.3",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  }
}
